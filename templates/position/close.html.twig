{% extends 'base.html.twig' %}

{% block title %}Buy{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-4 mb-4 text-center">Sell</h1>
        <div class="row">
            <div class="col-6 offset-3">
                <div class="card bg-light">
                    <div class="card-body">
                        <form method="post">

                            <h1 class="h4 mb-3 font-weight-normal">Close a position</h1>
                            <label for="inputTickerName">Ticker Name</label>
                            <input type="text" name="ticker" id="inputTickerName" class="form-control mb-3">
                            <label for="inputAmount">Amount</label>
                            <input type="number" name="amount" id="inputAmount" class="form-control mb-4" required>

                            <button class="btn btn-lg btn-primary mb-4" type="submit">
                                Sell
                            </button>
                            <div><a href="{{ path('portfolio') }}">Back to Portfolio</a></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
