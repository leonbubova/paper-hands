{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-4 mb-4 text-center">Login</h1>
        <div class="row">
            <div class="col-6 offset-3">
                <div class="card bg-light">
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}


                            <h1 class="h4 mb-3 font-weight-normal">Please sign in</h1>
                            <label for="inputUsername">Username</label>
                            <input type="text" value="demo" name="username" id="inputUsername" class="form-control mb-3">
                            <label for="inputPassword">Password</label>
                            <input type="password" value="password" name="password" id="inputPassword" class="form-control mb-4" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            {#
                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                            See https://symfony.com/doc/current/security/remember_me.html

                            <div class="checkbox mb-3">
                                <label>
                                    <input type="checkbox" name="_remember_me"> Remember me
                                </label>
                            </div>
                            #}

                            <button class="btn btn-lg btn-primary mb-4" type="submit">
                                Sign in
                            </button>
                            <div><a href="{{ path('app_register') }}">Create Account</a></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
